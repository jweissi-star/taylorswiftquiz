      padding: 30px;
      max-width: 600px;
      width: 100%;
    }
    h1 {
      text-align: center;
      color: #d6336c;
    }
    .question {
      font-size: 1.2rem;
      margin-bottom: 20px;
    }
    .answers button {
      display: block;
      width: 100%;
      margin: 8px 0;
      padding: 10px;
      font-size: 1rem;
      border: 2px solid #d6336c;
      border-radius: 5px;
      background: #fff;
      cursor: pointer;
      transition: 0.3s;
    }
    .answers button:hover {
      background: #d6336c;
      color: #fff;
    }
    .score-container {
      text-align: center;
      font-size: 1.3rem;
      color: #d6336c;
    }
